        />
        <elf.m.passportsimple.ui.view.PreferenceItemView
            android:id="@+id/information_location"
            mero:item_text="@string/information_me_location_string"
            mero:item_tip="@string/information_me_todo_string"
            mero:image_type_src="@drawable/ic_information_location"
            mero:next_tip_coexist="true"
            style="@style/information_item_style"
        />
        <elf.m.passportsimple.ui.view.PreferenceItemView
                android:id="@+id/information_country"
                mero:item_text="@string/information_me_country_string"
                mero:item_tip="@string/information_me_todo_string"
                mero:image_type_src="@drawable/ic_information_location"
                mero:next_tip_coexist="true"
                style="@style/information_item_style"
        />
    </LinearLayout>
