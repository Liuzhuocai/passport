<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mero="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/information_me_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <elf.m.passportsimple.ui.view.ToolbarControl
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/information_me"
        app:backText="@string/toolbar_normal_back"
        app:backimage="@drawable/ic_normal_back" />
    <RelativeLayout
        android:id="@+id/information_me_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/information_bg_color"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
    >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/bg_information_user"
        >
            <elf.m.passportsimple.ui.view.HeaderCircleImageView
                android:id="@+id/cloud_icon_iv"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                mero:civ_border_color="#EBEDFF"
                mero:civ_border_width="3.3dp"
                android:src="@drawable/ic_unlogin"/>
