    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/information_item_group_style">
        <elf.m.passportsimple.ui.view.PreferenceItemView
                android:id="@+id/information_first_name"
                mero:item_text="@string/information_me_first_name_string"
                mero:item_tip="@string/information_me_todo_string"
                mero:image_type_src="@drawable/ic_information_gender"
                mero:next_tip_coexist="true"
                style="@style/information_item_style"
        />
        <elf.m.passportsimple.ui.view.PreferenceItemView
                android:id="@+id/information_last_name"
                mero:item_text="@string/information_me_last_name_string"
                mero:item_tip="@string/information_me_todo_string"
                mero:image_type_src="@drawable/ic_information_gender"
                mero:next_tip_coexist="true"
                style="@style/information_item_style"
        />
        <elf.m.passportsimple.ui.view.PreferenceItemView
            android:id="@+id/information_gender"
            mero:item_text="@string/information_me_sex_string"
            mero:item_tip="@string/information_me_todo_string"
            mero:image_type_src="@drawable/ic_information_gender"
            mero:next_tip_coexist="true"
            style="@style/information_item_style"
        />
